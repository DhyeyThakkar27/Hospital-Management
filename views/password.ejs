<%- include('header.ejs'); %>

<h1 class="text-center pt-5"> Authentication required </h1>

<div class="container-fluid ">
  <div class = "row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <form method="post" action = "/password" autocomplete="off" class = "p-5" >
        <div class="mb-3 pass-form">
          <label for="exampleInputEmail1" class="form-label">User Name</label>
          <input type="text" class="form-control" id="exampleInputEmail1" name = "user_name" aria-describedby="emailHelp" placeholder="user name">
        </div>
        <input type="hidden" class="form-control" name="pageToGO" value = "<%=linkname%> " placeholder="Employee ID">
        <div class="mb-3 pass-form">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" class="form-control" name = "user_password" placeholder="password" id="exampleInputPassword1">
        </div>
        <p class="wrong-msg"> <%= msgToDisplay %>  </p>
        <button  type="submit" class="btn btn-primary pass-form">Login</button>
      </form>
    </div>
    <div class="col-lg-2"></div>
  
  </div>
</div>




<%- include('footer.ejs'); %>