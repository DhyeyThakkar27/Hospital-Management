<% if (records.length >0) { %>
<div class="container p-5">
    <div class="row">
        <!-- <h1>employee records</h1> -->
        <table class="table table-striped table-primary">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Sex</th>
              <th>Department</th>
              <th>Experiance</th>
              <th>Contact Number</th>
              <th>Salary</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <%if (records.length >0){ %>
            <% records.forEach(function(row){ %>
            <tr>
              <td><%= row.e_id %></td>
              <td><%= row.e_name %></td>
              <td><%= row.e_sex %></td>
              <td><%= row.e_department %></td>
              <td><%= row.e_exp %></td>
              <td><%= row.e_con %></td>
              <td><%=row.e_salary%></td>
              <td><a class="btn btn-primary btn-xs" href="/edit_doc/<%= row.e_id %>"><i class="fa fa-edit"></i></a>
                <a class="btn btn-danger btn-xs" href="/delete_doc/<%= row.e_id %>"><i class="fa fa-trash"></i></a>
              </td>
            </tr>
            <% })}else{ %>
              <tr>
                  <td colspan="6">No Record Found</td>
                  
                </tr>
              <% } %>
          </tbody>
        </table>
  </div>
</div>
<% } %>
<% if (noOfRec > 5) { %>
