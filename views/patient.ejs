<%- include('header.ejs');  %>
<% if (records.length >0) { %>
    <div class="container p-5 pb-2">
        <div class="row">
            <!-- <h1>employee records</h1> -->
            <table class="table table-striped table-primary">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Name</th>
                  <th>address</th>
                  <th>sex</th>
                  <th>age</th>
                  <th>Contact Number</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <%if (records.length >0){ %>
                <% records.forEach(function(row){ %>
                <tr>
                  <td><%= row.p_id %></td>
                  <td><%= row.p_name %></td>
                  <td><%= row.p_address %></td>
                  <td><%= row.p_sex %></td>
                  <td><%= row.p_age %></td>
                  <td><%= row.p_contact%></td>
                  <td><a class="btn btn-primary btn-xs" href="/edit_pat/<%= row.p_id %>"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-xs" href="/delete_pat/<%= row.p_id %>"><i class="fa fa-trash"></i></a>
                  </td>
                </tr>
                <% })}else{ %>
                  <tr>
                      <td colspan="6">No Record Found</td>
                      
                    </tr>
                  <% } %>
              </tbody>
            </table>
      </div>
    </div>
<% } %>
<% if (noOfRec > 5) { %>
	<div class="container-fluid text-center">
		<h5>
			<a style = "color : #a4ebf3" href = '/<%= getMet %>' > <%= linkMsg %>  </a>
		</h5>
	</div>
	 
<% } %>
<div class="container-fluid text-center">
<h4>
	Total rooms left : <%= totalRooms %>
</h4>
</div>

